@model IEnumerable<Rocy.Models.Category>
@{
    ViewData["Title"] = "Category";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6">
            <a asp-Controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="fas fa-plus"></i> Create New Categoty
            </a>

        </div>
    </div>
</div>
<br /><br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <th>Name</th>
            <th>Display number</th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%" >@item.Displayorder</td>
                    <td>
                        <div class="w-75 btn-group " role=group> 
                            <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-info mx-2">
                                <i class="fas fa-edit"></i>
                                </a>
                         
                            <a  asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-danger mx-2">
                                <i class="fas fa-trash-alt"></i>
                                </a>
                        
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
