@model IEnumerable<Rocy.Models.Category>
@{
    ViewData["Title"] = "Category";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6">Create New Categoty</div>
    </div>
</div>
<br /><br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <th>Name</th>
            <th>Display number</th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Displayorder</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}
